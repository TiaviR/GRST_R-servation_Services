<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#3C3C3C"
        app:cardCornerRadius="17dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/logo"
                    app:civ_border_color="@color/elegant_gold"
                    app:civ_border_width="2dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/id_reservation_page_gestion_reservations"
                    style="@style/DefaultTextStyle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Réservation ID"
                    android:textSize="11sp"
                    android:textColor="@color/elegant_gold"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_fournisseur_client_gestion_reservations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fournisseur - Client"
                    style="@style/DefaultTextStyle"
                    android:textColor="@color/elegant_gold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/text_date_periode_gestion_reservations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date - Période"
                    android:textColor="@color/classy_grey"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>